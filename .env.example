# AI Deep Research Agent - 环境变量配置
# 复制此文件为 .env 并填入实际值

# ============== OpenAI API 配置 ==============
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
MODEL=gpt-4o

# ============== LlamaCloud 知识库配置 ==============
# 用于 RAG 知识库查询（合同审核时查询法律知识）
LLAMACLOUD_API_KEY=your_llamacloud_api_key
LLAMACLOUD_INDEX_ID=your_index_id

# ============== Supabase 配置（可选）==============
# 用于持久化对话历史
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your_supabase_api_key

# ============== 功能开关 ==============
# 调试模式（显示工具调用日志）
DEBUG=1

# 显示工具调用日志
TOOL_LOG=1

# 显示规划步骤
SHOW_PLAN=0

# 启用流式输出
STREAM=1

# 启用反思功能
REFLECT=0

# 反思调试模式
REFLECT_DEBUG=0
